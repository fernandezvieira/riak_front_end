<h1>Messages</h1>

<%= form_tag(messages_path, :method => "get") do %>
	<%= label_tag(:node, "Node:") %>
	<%= text_field_tag(:node) %>
	<%= submit_tag("Search")%>
<% end %>

<table>
  <tr>
    <th>KEY</th>
    <th>BODY</th>
    <th>MSISDN</th>
    <th>NODE</th>
 </tr>

<% @messages.each do |key, message| 
	@key = key
	@body = message["body"]
	@msisdn = message["msisdn"] 
	@node = message["node"]
%>
<tr>
	<td><%= link_to @key, message_path(@key) %></td>
	<td><%= @body %></td>
	<td><%= @msisdn %></td>
	<td><%= @node %></td>
</tr>
<% end %>

</table>

<br />

<%= link_to 'New Message', new_message_path %>
